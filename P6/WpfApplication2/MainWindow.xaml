<Window x:Class="OzlemCinarWPF.MainWindow"

        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"

        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"

        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"

        xmlns:local="clr-namespace:OzlemCinarWPF"

        mc:Ignorable="d"

        Title="MainWindow" Height="325" Width="545">

    <Grid Margin="0,60,0,0" RenderTransformOrigin="0.5,0.5" Background="LightBlue">

        <Grid.RenderTransform>

            <TransformGroup>

                <ScaleTransform/>

                <SkewTransform/>

                <RotateTransform Angle="0.376"/>

                <TranslateTransform/>

            </TransformGroup>

        </Grid.RenderTransform>

        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" VerticalAlignment="Top" Background="LawnGreen"/>

        <Button x:Name="button" Content="Ozlem says start here" Margin="0,-59,0,0" VerticalAlignment="Top" Height="59" Click="button_Click" FontSize="17.467" HorizontalAlignment="Left" Width="517" Background ="Pink"/>

    </Grid>

</Window>